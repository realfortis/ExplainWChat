{
    "manifest_version": 3,
    "name": "Explain with ChatGPT",
    "version": "1.2",
    "description": "Right-click highlighted text to get an explanation from ChatGPT.",
    "permissions": ["contextMenus", "storage", "scripting", "activeTab"],
    "host_permissions": ["https://api.openai.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "options_page": "options.html"
  }
  