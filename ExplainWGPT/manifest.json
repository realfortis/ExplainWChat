{
  "manifest_version": 3,
  "name": "Explain with ChatGPT",
  "version": "1.0",
  "description": "Right-click highlighted text to get an explanation using ChatGPT.",
  "permissions": ["contextMenus", "storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
